<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/dissatisfied_ic_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dissatisfied_ic_margin_top"
                app:srcCompat="@drawable/ic_sentiment_dissatisfied"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNoResultsFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dissatisfied_ic_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/no_results_found_text_margin_top"
                android:maxWidth="@dimen/no_results_found_text_max_width"
                android:text="@string/no_results_found_for"/>
    </RelativeLayout>
</LinearLayout>